<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:paddingTop="20dp"
    android:weightSum="1"
    android:background="@android:color/black">


    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/out_value"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/out_label"
        android:layout_alignBottom="@+id/out_label"
        android:layout_toRightOf="@+id/out_label"
        android:layout_toEndOf="@+id/out_label"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button android:id="@+id/ball_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/ball_button"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/out_label"
        android:layout_toEndOf="@+id/out_label">
    </Button>

    <Button android:id="@+id/strike_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/strike_button"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignBaseline="@+id/ball_button"
        android:layout_alignBottom="@+id/ball_button"
        android:layout_alignRight="@+id/out_label"
        android:layout_alignEnd="@+id/out_label"></Button>

    <TextView
        android:text="@string/strike_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strike_value"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/strike_label"
        android:layout_alignBottom="@+id/strike_label"
        android:layout_alignLeft="@+id/out_value"
        android:layout_alignStart="@+id/out_value" />

    <TextView
        android:text="@string/strike_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/strike_label"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/out_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"></TextView>

    <TextView
        android:text="@string/ball_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ball_label"
        android:textSize="24sp"
        android:textColor="@android:color/white"

        android:layout_below="@+id/strike_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/out_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/out_label"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="39dp"
        android:layout_alignTop="@+id/ball_value"
        android:layout_alignLeft="@+id/ball_label"
        android:layout_alignStart="@+id/ball_label" />

    <TextView
        android:text="@string/ball_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ball_value"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="85dp"
        android:layout_above="@+id/ball_button"
        android:layout_alignLeft="@+id/out_value"
        android:layout_alignStart="@+id/out_value" />


</RelativeLayout>